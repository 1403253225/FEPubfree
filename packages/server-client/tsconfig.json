{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src",
    "typings"
  ]
}
